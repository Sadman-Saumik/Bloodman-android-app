<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiverInterface">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="107dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="79dp"
        android:text="Bloodtype:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ReceiverBloodSpinner"
        android:layout_width="145dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="136dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="Location:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ReceiverLocationSpinner"
        android:layout_width="198dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Receiver"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ReceiverSearchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReceiverLocationSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:text="Search"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ReceiverList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ReceiverSearchButton"
        android:layout_alignParentStart="true" />
</RelativeLayout>